---
import HeaderItem from "./HeaderItem.astro";
import CompactHeaderItem from "./CompactHeaderItem.astro";

import { type HeaderItems } from "@/config";

interface Props extends HeaderItems {}

const { items } = Astro.props;
---

<div
    class="bg-base-100/80 text-base-content sticky top-0 z-30 flex h-16 w-full [transform:translate3d(0,0,0)] justify-center backdrop-blur transition-shadow duration-100 print:hidden"
>
    <nav class="navbar w-full py-0">
        <div class="navbar shadow-sm">
            <div class="navbar-start">
                <div class="dropdown">
                    <div
                        tabindex="0"
                        role="button"
                        class="btn btn-ghost lg:hidden"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h8m-8 6h16"></path>
                        </svg>
                    </div>
                    <ul
                        tabindex="-1"
                        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow"
                    >
                        {
                            items &&
                                Object.entries(items).map(([name, item]) => (
                                    <CompactHeaderItem
                                        name={name}
                                        item={item}
                                    />
                                ))
                        }
                    </ul>
                </div>
                <a href="/" class="btn btn-ghost text-xl">Theo's Workbench</a>
            </div>
            <div class="navbar-center hidden lg:flex">
                <ul class="menu menu-horizontal px-1">
                    {
                        items &&
                            Object.entries(items).map(([name, item]) => (
                                <HeaderItem name={name} item={item} />
                            ))
                    }
                </ul>
            </div>
            <div class="navbar-end">
                <!-- <a class="btn">Button</a> -->
            </div>
        </div>
    </nav>
</div>
